<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.plants.PlantsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/terrain_recycler_view_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_find_plant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="@color/principal"
        app:layout_constraintBottom_toBottomOf="@+id/terrain_recycler_view_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_search_24"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addCardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/principal"
        app:layout_constraintBottom_toTopOf="@+id/add_find_plant"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/rounded_add_48dp" />
</androidx.constraintlayout.widget.ConstraintLayout>